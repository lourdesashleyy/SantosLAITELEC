@model IEnumerable<Instructor>;

<div>Instructor List</div>


<table class="table table-dark">

    <tr>
        <th colspan="6">Instructor</th>
    </tr>

    <tr>
        <td>Name</td>
        <td>Rank</td>
        <td>Hiring Date</td>
        <td>IsTenured</td>
        <td>Details</td>
    </tr>
    @foreach (var instructor in Model)
    {
        <tr>
            <td>@instructor.InstructorFirstName @instructor.InstructorLastName</td>
            <td>@instructor.Rank</td>
            <td>@instructor.HiringDate</td>
            <td>@instructor.IsTenured</td>
            <td><a asp-action="ShowDetail" asp-route-id="@instructor.InstructorId">Show Details</a></td>

        </tr>
    }
</table>
